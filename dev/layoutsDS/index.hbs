<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="canonical" href="https://www.sampetulla.com">
		<link rel="shortcut icon" type="image/x-icon" href="favicon.ico" />
		<link href="https://fonts.googleapis.com/css?family=Noto+Sans" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css?family=Noto+Serif" rel="stylesheet">
		<title>{{meta.title}}</title>
		<style>
			@import 'layout.css';
			@import 'headings.css';
			@import 'text.css';
			body {
				font-family: "Noto Sans";
				font-size: 1em;
				margin: 0;
				padding: 0;
		  	position: relative;
			}
			a {
				color: #262626;
				cursor: pointer;
				text-decoration: none;
			}
			a:hover {
				text-decoration: underline;
			}

		</style>
	</head>
		<header>
			<div class="sampetulla">
				<h1>Sam Petulla</h1>
			</div>
			<div class="job-title">
				<h2>Editor, CNN Politics</h2>
			</div>
			<nav>
				{{#each meta.nav }}
					<div><a href="#{{this}}">{{this}}</a></div>
				{{/each}}
			</nav>
		</header>
		<main>
			<article>
				<p>{{{meta.introtext}}}</p>
			</article>
			<section id="{{meta.nav.item}}">
				<h2>{{meta.sections.analyses.title}}</h2>
				{{#each analyses.analyses }}
					<h3 class="graphics-title">
						<a href="{{url}}">{{title}}</a>
					</h3>
					<figure class="graphics-img">
							<a href="{{url}}"><img src="img/{{@key}}.png" /></a>
					</figure>
				{{/each}}
			</section>

			<section id="{{meta.nav.item1}}">
				<h2>{{meta.sections.explorables.title}}</h2>
				{{#each explorables.explorables }}
					<h3 class="explorables-title">
						<a href="{{url}}">{{title}}</a>
					</h3>
					<figure class="explorables-img">
							<a href="{{url}}"><img src="img/{{@key}}.png" /></a>
					</figure>
				{{/each}}
			</section>

			<section id="{{meta.nav.item2}}">
				<h2>{{meta.sections.articles.title}}</h2>
				{{#each articles.articles }}
					<summary class="title-and-link">
						<a href="{{url}}">{{title}}</a>
					</summary>
				{{/each}}
			</section>

		</main>
	</body>
</html>
